<h1><%= @course.name %></h1>
<div class="ui two column grid">
  <div class="column">
    <h2>Challenges</h2>
    <%= link_to 'Challenges', course_challenges_path(@course), class: "ui button" %>
  </div>
  <div class="column">
    <h2>Materials</h2>
    <%= link_to 'Materials', course_materials_path(@course), class: "ui button" %>
  </div>
  <div class="column">
    <h2>Rank</h2>
    <%= link_to 'Rank', course_rank_path(@course), class: "ui button" %>
  </div>
</div>
