<h1>Ranks</h1>
<table class="ui table">
  <thead>
    <tr>
      <th>#</th>
      <th>Avatar</th>
      <th>Name</th>
      <th>Point</th>
      <th>Last Submission</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do | user, i |  %>
      <tr>
        <td>
          <% if @users.first_page? %>
            <%= i+1 %>
          <% else %>
            <%= (params[:page].to_i-1)*25+i+1 %>
          <% end %>
        </td>
        <td><%= profile_avatar user, class: "ui avatar image" %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.total_point @course_id %></td>
        <td><%= user.last_challenge_submission_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
