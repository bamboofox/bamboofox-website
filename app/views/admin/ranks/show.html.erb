<h1>Ranks</h1>
<table class="ui table">
  <thead>
    <tr>
      <th>#</th>
      <th>Avatar</th>
      <th>Name</th>
      <th>Point</th>
      <th>Last Submission</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do | user, i |  %>
      <tr>
        <% if @users.first_page? %>
          <td><%= i+1 %></td>
        <% else %>
          <td><%= (params[:page].to_i-1)*25+i+1 %></td>
        <% end %>
        <td><%= profile_avatar user, class: "ui avatar image" %></td>
        <td><%= link_to user.name, user %></td>
        <td><%= user.total_point @course_id %></td>
        <td><%= user.last_challenge_submission_time %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
<% if params[:course_id] %>
  <%= link_to 'Back to Course', admin_course_path(@course), class: "ui button" %>
<% end %>
